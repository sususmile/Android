<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="复仇者联盟4：终局之战"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="上映时间：2019-04-24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导演：乔·罗素/安东尼·罗素" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地区：美国" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主演： 小罗伯特·唐尼  克里斯·埃文斯  马克·鲁法洛" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型：动作/冒险/奇幻" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介：改编自漫威漫画，也是漫威电影宇宙第22部影片。复仇者联盟的一众超级英雄，必须抱着牺牲一切的信念，与史上最强大反派灭霸殊死一搏，阻止其摧毁宇宙的邪恶计划。" />

    <LinearLayout
        android:id="@+id/discount1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#f8f8f8"
        android:orientation="horizontal" >

		<LinearLayout
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

	        <TextView
            android:id="@+id/startTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:10"
            android:textSize="25dp" 
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

	        <TextView
	            android:id="@+id/textView9"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginTop="5dp"
	            android:text="23:11散场" />
	        
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

			<TextView
			    android:id="@+id/textView10"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="35dp"
			    android:text="英语3D"
			    android:textSize="15dp" />

			<TextView
			    android:id="@+id/textView11"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
			    android:text="7号JBL厅"
			    android:textSize="10dp" 
			    android:layout_marginLeft="3dp"/>
	        
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

			<TextView
			    android:id="@+id/money1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:layout_marginTop="35dp"
			    android:text="￥37.9"
			    android:textSize="15dp"
			    android:textColor="#00CC66"/>

			
	        
		</LinearLayout>
		<LinearLayout
		    android:layout_width="80dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

			<Button
			    android:id="@+id/button1"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
			    android:background="@drawable/shape"
			    android:text="立即购买"
			    android:textColor="@color/white" 
			    android:textSize="12dp"
			    android:layout_gravity="center"
			    android:layout_marginTop="30dp"/>
	        
		</LinearLayout>
        
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/discount2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f8f8f8"
        android:orientation="horizontal" 
      >

		<LinearLayout
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

	        <TextView
	            android:id="@+id/startTime2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginTop="30dp"
	            android:text="18:55"
	            android:textSize="25dp" />

	        <TextView
	            android:id="@+id/textView14"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginTop="5dp"
	            android:text="19:56散场" />
	        
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

			<TextView
			    android:id="@+id/textView15"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="35dp"
			    android:text="英语3D"
			    android:textSize="15dp" />

			<TextView
			    android:id="@+id/textView16"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
			    android:text="7号JBL厅"
			    android:textSize="10dp" 
			    android:layout_marginLeft="3dp"/>
	        
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

			<TextView
			    android:id="@+id/money2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:layout_marginTop="35dp"
			    android:text="￥31.9"
			    android:textColor="#00CC66"
			    android:textSize="15dp" />
	        
		</LinearLayout>
		<LinearLayout
		    android:layout_width="80dp"
		    android:layout_height="100dp"
		    android:background="#f8f8f8"
		    android:orientation="vertical" >

			<Button
			    android:id="@+id/button2"
			    style="?android:attr/buttonStyleSmall"
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
			    android:background="@drawable/shape"
			    android:text="立即购买"
			    android:textColor="@color/white" 
			    android:textSize="12dp"
			    android:layout_gravity="center"
			    android:layout_marginTop="30dp"/>
	        
		</LinearLayout>
        
    </LinearLayout>
    
    
</LinearLayout>
